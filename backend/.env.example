# Database
DATABASE_URL="postgresql://user:password@localhost:5432/contractfabrico"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
ADMIN_EMAIL="admin@contractfabrico.com"
ADMIN_PASSWORD="secure-admin-password-change-this"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# Cloudflare R2
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="contractfabrico-docs"
R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
FROM_EMAIL="noreply@contractfabrico.com"

# Application
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DOCUMENTS_MAX=30

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Document Generation
PDF_GENERATION_TIMEOUT=30000
PUPPETEER_HEADLESS="true"