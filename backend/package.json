  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^17.1.0",
    "@sendgrid/mail": "^8.1.4",
    "prisma": "^5.19.1",
    "@prisma/client": "^5.19.1",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^23.8.0",
    "aws-sdk": "^2.1691.0",
    "winston": "^3.14.2",
    "uuid": "^10.0.0",
    "mustache": "^4.2.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
